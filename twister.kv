#:kivy 2.0.0

<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: '20dp'
        padding: '30dp'
        
        Label:
            text: 'Twister Game'
            font_size: '50sp'
            color: 1, 0.7, 0, 1  # Gold color
        
        Button:
            text: 'Start Game'
            font_size: '24sp'
            size_hint_y: None
            height: '70dp'
            background_color: 0, 0.7, 0, 1  # Green color
            on_press: root.start_game()
        
        Button:
            text: 'Settings'
            font_size: '24sp'
            size_hint_y: None
            height: '70dp'
            background_color: 0, 0.5, 0.7, 1  # Blue color
            on_press: root.open_settings()
        
        Button:
            text: 'Leaderboard'
            font_size: '24sp'
            size_hint_y: None
            height: '70dp'
            background_color: 0.7, 0, 0, 1  # Red color
            on_press: root.open_leaderboard()

<GameScreen>:
    # Add any specific layouts or widgets for your game screen here

<SettingsScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: '20dp'
        padding: '30dp'
        
        Label:
            text: 'Settings'
            font_size: '40sp'
            color: 0, 0.5, 0.7, 1  # Blue color
        
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: '100dp'
            Label:
                text: 'Volume'
                font_size: '24sp'
            Slider:
                id: volume_slider
                min: 0
                max: 1
                value: root.volume
                on_value: root.volume = self.value
            Label:
                text: f"Current Volume: {volume_slider.value:.2f}"
                font_size: '18sp'

        Button:
            text: 'Back to Menu'
            font_size: '24sp'
            size_hint_y: None
            height: '70dp'
            background_color: 0, 0.7, 0, 1  # Green color
            on_press: root.go_back()

<LeaderboardScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: '20dp'
        padding: '30dp'
        
        Label:
            text: 'Leaderboard'
            font_size: '40sp'
            color: 0.7, 0, 0, 1  # Red color
        
        ScrollView:
            size_hint_y: 0.7
            BoxLayout:
                id: leaderboard_layout
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
        
        Button:
            text: 'Back to Menu'
            font_size: '24sp'
            size_hint_y: None
            height: '70dp'
            background_color: 0, 0.7, 0, 1  # Green color
            on_press: root.go_back()